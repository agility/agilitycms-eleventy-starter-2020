{
	"name": "agility-cms-11ty-blog",
	"version": "1.0.0",
	"description": "A blog with 11th with content from Agility CMS",
	"main": "index.js",
	"scripts": {
		"clean:cms": "node agility/agility.sync.js clear",
		"clean:files": "del dist",
		"dev:cms": "NODE_ENV=development node agility/agility.sync.js sync",

		"dev:assets": "NODE_ENV=development webpack",
		"dev:11ty": "NODE_ENV=development eleventy",
		"build:cms": "NODE_ENV=production node agility/agility.sync.js sync",
		"build:assets": "webpack --mode production",
		"build:11ty": "eleventy ",
		"start:assets": "NODE_ENV=development webpack --watch",
		"start:11ty": "NODE_ENV=development eleventy --serve --watch",

		"clean": "run-p clean:* --print-label",
		"dev": "run-s clean:files dev:* --print-label",
		"start": "npm-run-all clean:files dev:cms --parallel start:*",
		"build": "run-s clean:files build:* --print-label"
	},
	"author": "Joel Varty",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@11ty/eleventy": "^0.11.1",
		"@agility/content-sync": "^0.1.20",
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@fullhuman/postcss-purgecss": "^4.0.0",
		"@tailwindcss/typography": "^0.4.0",
		"alpinejs": "^2.8.0",
		"autoprefixer": "^10.2.4",
		"babel-loader": "^8.2.2",
		"css-loader": "^5.0.1",
		"cssnano": "^4.1.10",
		"del-cli": "^3.0.1",
		"dotenv": "^8.2.0",
		"luxon": "^1.25.0",
		"mini-css-extract-plugin": "^1.3.5",
		"npm-run-all": "^4.1.5",
		"postcss-loader": "^4.2.0",
		"tailwindcss": "^2.0.2",
		"truncate-html": "^1.0.3",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0",
		"webpack-manifest-plugin": "^3.0.0"
	}
}
